<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= @user_types.index(user.user_type) %></td>
      <td><%= link_to 'Show', user %></td>

      <% if write_access? user %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Wirklich lÃ¶schen?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br />
