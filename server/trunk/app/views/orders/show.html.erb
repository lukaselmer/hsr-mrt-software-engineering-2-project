<p>
  <b><%= Order.human_attribute_name(:customer_id) %>:</b>
  <%= @order.customer %>
</p>

<p>
  <b><%= Order.human_attribute_name(:description) %>:</b>
  <%= @order.description %>
</p>

<p>
  <b><%= Order.human_attribute_name(:address) %>:</b>
  <% unless @order.address.nil? %>
    <%= render :partial => "addresses/address", :locals => { :address => @order.address } %>
    <%= render :partial => "addresses/map", :locals => { :gps_position => @order.address.gps_position } %>
  <% end %>
</p>

<p>
  <b><%= Order.human_attribute_name(:time_entries) %>:</b>
  <%= render :partial => "time_entries/table", :locals => { :time_entries => @order.time_entries, :fields => [ :id, :time_entry_type, :user, :duration ] } %>

  <br />

  <% if write_access? TimeEntry.new %>
    <%= link_to 'Neuer ' + TimeEntry.model_name.human, new_time_entry_path(:order_id => @order.id) %>
  <% end %>

</p>

