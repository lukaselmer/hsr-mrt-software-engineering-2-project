<h1><%= t(:detail)%> Benutzer</h1>

<% fields = [:id, :first_name, :last_name, :phone, :email, :human_model_name] %>
<% fields.each do |f| %>
  <p>
    <b><%= User.human_attribute_name(f) %>:</b>
    <%= @user.send(f) %>
  </p>
<% end %>

<%= link_to t(:edit), edit_user_path(@user) %> |
<%= link_to t(:back), users_path %>
