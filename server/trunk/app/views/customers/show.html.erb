<p id="notice"><%= notice %></p>

<p>
  <b><%= Customer.human_attribute_name(:id) %>:</b>
  <%= @customer.id %>
</p>

<p>
  <b><%= Customer.human_attribute_name(:first_name) %>:</b>
  <%= @customer.first_name %>
</p>

<p>
  <b><%= Customer.human_attribute_name(:last_name) %>:</b>
  <%= @customer.last_name %>
</p>

<p>
  <b><%= Customer.human_attribute_name(:phone) %>:</b>
  <%= @customer.phone %>
</p>

<p>
  <b>Orders:</b>
  <table>
    <tr>
      <th><%= Order.human_attribute_name(:created_at) %>:</th>
      <th><%= Order.human_attribute_name(:description) %>:</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @customer.orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.description %></td>
      <td><%= link_to t(:show), order %></td>

       <% if write_access? order %>
          <td><%= link_to t(:edit), edit_order_path(order) %></td>
          <td><%= link_to t(:destroy), order, :confirm => t(:confirm_delete), :method => :delete %></td>
       <% end %>
    </tr>
  <% end %>
  </table>
</p>

<%= link_to t(:edit), edit_customer_path(@customer) %> |
