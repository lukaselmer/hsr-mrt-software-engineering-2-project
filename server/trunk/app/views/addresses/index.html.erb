<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Line1</th>
    <th>Line2</th>
    <th>Line3</th>
    <th>Place</th>
    <th>Zip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.id %></td>
    <td><%= address.line1 %></td>
    <td><%= address.line2 %></td>
    <td><%= address.line3 %></td>
    <td><%= address.place %></td>
    <td><%= address.zip %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

