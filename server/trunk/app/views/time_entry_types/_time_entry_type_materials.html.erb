<ul>
  <% time_entry_type_materials.each do |time_entry_type_material| %>
    <% material = time_entry_type_material.material %>
    <% next if material.nil? %>
    <li>
      <%= link_to material do %><%= material %>, <%= number_to_currency material.price unless material.price.nil? %> (<%= time_entry_type_material.amount %> <%= t(:pieces) %>)<% end %>
      &nbsp;<%= link_to t(:remove), time_entry_type_material, :confirm => t(:confirm_remove), :remote => true, :method => :delete %>
    </li>
  <% end %>
</ul>
