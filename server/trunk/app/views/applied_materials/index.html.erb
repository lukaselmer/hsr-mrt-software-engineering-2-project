<h1>Übersicht verwendetes Material</h1>

<table>
  <tr>
    <th>Anzahl</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applied_materials.each do |applied_material| %>
  <tr>
    <td><%= applied_material.amount %></td>
    <td><%= link_to 'Anzeigen', applied_material %></td>

    <% if write_access? applied_material %>
      <td><%= link_to 'Bearbeiten', edit_applied_material_path(applied_material) %></td>
      <td><%= link_to 'Löschen', applied_material, :confirm => 'VerwendetesMaterial wirklich löschen?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if write_access? %>
<%= link_to 'Neues verwendetes Material erstellen', new_applied_material_path %>
<% end %>