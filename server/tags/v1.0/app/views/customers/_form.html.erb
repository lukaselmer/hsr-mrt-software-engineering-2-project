<%= form_for(@customer) do |f| %>
  <%= form_error_messages f %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.select("address_id", Address.for_select, {:include_blank => true}) %>
    <% if write_access? Address.new %>
      <%= link_to 'Neue ' + Address.model_name.human + ' erfassen', new_address_path %>
    <% end %>
  </div>


